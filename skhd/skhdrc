.blacklist [
    "System Settings"
    "Warp"
]

# Window Management (replicating Hammerspoon functionality)
# Window halves
cmd + alt + ctrl - left  : /opt/homebrew/bin/yabai -m window --grid 2:2:0:0:1:2
cmd + alt + ctrl - right : /opt/homebrew/bin/yabai -m window --grid 2:2:1:0:1:2
cmd + alt + ctrl - up    : /opt/homebrew/bin/yabai -m window --grid 2:2:0:0:2:1
cmd + alt + ctrl - down  : /opt/homebrew/bin/yabai -m window --grid 2:2:0:1:2:1

# Window quarters
cmd + alt + ctrl - 1 : /opt/homebrew/bin/yabai -m window --grid 2:2:0:0:1:1
cmd + alt + ctrl - 2 : /opt/homebrew/bin/yabai -m window --grid 2:2:1:0:1:1
cmd + alt + ctrl - 3 : /opt/homebrew/bin/yabai -m window --grid 2:2:0:1:1:1
cmd + alt + ctrl - 4 : /opt/homebrew/bin/yabai -m window --grid 2:2:1:1:1:1

# Maximize and center
cmd + alt + ctrl - m : /opt/homebrew/bin/yabai -m window --grid 1:1:0:0:1:1
cmd + alt + ctrl - c : /opt/homebrew/bin/yabai -m window --grid 5:5:1:1:3:3

# Center window with padding (80% of screen size)
cmd + alt + ctrl - space : /opt/homebrew/bin/yabai -m window --grid 5:5:1:1:3:3

# Toggle through windows of current application
cmd + alt + ctrl - t : /opt/homebrew/bin/yabai -m window --focus next || /opt/homebrew/bin/yabai -m window --focus first

# Space navigation
alt + ctrl - n : /opt/homebrew/bin/yabai -m space --focus next
alt + ctrl - p : /opt/homebrew/bin/yabai -m space --focus prev

# App switching (assign apps to specific spaces)
# Space 1: Arc and Obsidian
alt + ctrl - z : /opt/homebrew/bin/yabai -m space --focus 1

# Space 2: Cursor
alt + ctrl - x : /opt/homebrew/bin/yabai -m space --focus 2

# Space 3: Unity
alt + ctrl - c : /opt/homebrew/bin/yabai -m space --focus 3

# Space 4: Empty
alt + ctrl - v : /opt/homebrew/bin/yabai -m space --focus 4

# Space 5: Empty
alt + ctrl - b : /opt/homebrew/bin/yabai -m space --focus 5

# Open multiple apps (Obsidian + Arc)
alt + ctrl - k : open -a "Obsidian"; sleep 0.1; open -a "Arc"

# Keep some useful yabai operations from original config
# Navigation
alt - h : /opt/homebrew/bin/yabai -m window --focus west
alt - j : /opt/homebrew/bin/yabai -m window --focus south
alt - k : /opt/homebrew/bin/yabai -m window --focus north
alt - l : /opt/homebrew/bin/yabai -m window --focus east

# Moving windows
shift + alt - h : /opt/homebrew/bin/yabai -m window --warp west
shift + alt - j : /opt/homebrew/bin/yabai -m window --warp south
shift + alt - k : /opt/homebrew/bin/yabai -m window --warp north
shift + alt - l : /opt/homebrew/bin/yabai -m window --warp east

# Move focus container to workspace
shift + alt - m : /opt/homebrew/bin/yabai -m window --space last; /opt/homebrew/bin/yabai -m space --focus last
shift + alt - p : /opt/homebrew/bin/yabai -m window --space prev; /opt/homebrew/bin/yabai -m space --focus prev
shift + alt - n : /opt/homebrew/bin/yabai -m window --space next; /opt/homebrew/bin/yabai -m space --focus next
shift + alt - 1 : /opt/homebrew/bin/yabai -m window --space 1; /opt/homebrew/bin/yabai -m space --focus 1
shift + alt - 2 : /opt/homebrew/bin/yabai -m window --space 2; /opt/homebrew/bin/yabai -m space --focus 2
shift + alt - 3 : /opt/homebrew/bin/yabai -m window --space 3; /opt/homebrew/bin/yabai -m space --focus 3
shift + alt - 4 : /opt/homebrew/bin/yabai -m window --space 4; /opt/homebrew/bin/yabai -m space --focus 4

# Resize windows
lctrl + alt - h : /opt/homebrew/bin/yabai -m window --resize left:-50:0; \
                  /opt/homebrew/bin/yabai -m window --resize right:-50:0
lctrl + alt - j : /opt/homebrew/bin/yabai -m window --resize bottom:0:50; \
                  /opt/homebrew/bin/yabai -m window --resize top:0:50
lctrl + alt - k : /opt/homebrew/bin/yabai -m window --resize top:0:-50; \
                  /opt/homebrew/bin/yabai -m window --resize bottom:0:-50
lctrl + alt - l : /opt/homebrew/bin/yabai -m window --resize right:50:0; \
                  /opt/homebrew/bin/yabai -m window --resize left:50:0

# Equalize size of windows
lctrl + alt - e : /opt/homebrew/bin/yabai -m space --balance

# Enable / Disable gaps in current workspace
lctrl + alt - g : /opt/homebrew/bin/yabai -m space --toggle padding; /opt/homebrew/bin/yabai -m space --toggle gap

# Rotate windows clockwise and anticlockwise
alt - r         : /opt/homebrew/bin/yabai -m space --rotate 270
shift + alt - r : /opt/homebrew/bin/yabai -m space --rotate 90

# Rotate on X and Y Axis
shift + alt - x : /opt/homebrew/bin/yabai -m space --mirror x-axis
shift + alt - y : /opt/homebrew/bin/yabai -m space --mirror y-axis

# Set insertion point for focused container
shift + lctrl + alt - h : /opt/homebrew/bin/yabai -m window --insert west
shift + lctrl + alt - j : /opt/homebrew/bin/yabai -m window --insert south
shift + lctrl + alt - k : /opt/homebrew/bin/yabai -m window --insert north
shift + lctrl + alt - l : /opt/homebrew/bin/yabai -m window --insert east

# Float / Unfloat window
shift + alt - space : \
    /opt/homebrew/bin/yabai -m window --toggle float; \
    /opt/homebrew/bin/yabai -m window --toggle border

# Restart Yabai
shift + lctrl + alt - r : \
    /usr/bin/env osascript <<< \
        "display notification \"Restarting Yabai\" with title \"Yabai\""; \
    launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"

# Make window native fullscreen
alt - f         : /opt/homebrew/bin/yabai -m window --toggle zoom-fullscreen
shift + alt - f : /opt/homebrew/bin/yabai -m window --toggle native-fullscreen

# opens iTerm2
alt - return : "${HOME}"/.config/yabai/scripts/open_iterm2.sh

# Show system statistics
fn + lalt - 1 : "${HOME}"/.config/yabai/scripts/show_cpu.sh
fn + lalt - 2 : "${HOME}"/.config/yabai/scripts/show_mem.sh
fn + lalt - 3 : "${HOME}"/.config/yabai/scripts/show_bat.sh
fn + lalt - 4 : "${HOME}"/.config/yabai/scripts/show_disk.sh
fn + lalt - 5 : "${HOME}"/.config/yabai/scripts/show_song.sh
